<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailActivity"
    android:background="@drawable/sos_background">


    <Button
        android:id="@+id/sos_home_button"
        android:layout_width="104dp"
        android:layout_height="47dp"
        android:text="Back"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/sos_img"
        android:layout_width="200dp"
        android:layout_height="169dp"
        android:src="@drawable/sos_logo"
        android:transitionName="a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sos_home_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SoS"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sos_img"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sos_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sos_desc"
        app:layout_constraintTop_toBottomOf="@+id/sos_title"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

    </TextView>

    <android.widget.Button

        android:id="@+id/sos_start_btn"
        android:background="@drawable/countdown_button_color_2"
        android:layout_width="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/sos_text"
        app:layout_constraintEnd_toEndOf="@+id/sos_text"
        app:layout_constraintStart_toStartOf="@+id/sos_text"
        android:text="Get Started"
        android:textStyle="bold"
        android:textColor="@color/white"
        >

    </android.widget.Button>

</androidx.constraintlayout.widget.ConstraintLayout>